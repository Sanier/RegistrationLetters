<Page x:Class="RegistrationLetters.Client.View.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RegistrationLetters.Client.View"
      mc:Ignorable="d" 
      d:DesignHeight="254.206" d:DesignWidth="380.718"
      Title="Registration" HorizontalAlignment="Center" VerticalAlignment="Center">

    <Grid>
        <TextBox x:Name="tbxFirstName" HorizontalAlignment="Left" Margin="33,49,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="127" Height="22"/>
