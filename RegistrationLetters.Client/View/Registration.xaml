        <Label x:Name="lblLastName" Content="Введите свою фамилию" HorizontalAlignment="Left" Margin="33,76,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblJobPosition" Content="Введите свою должность" HorizontalAlignment="Left" Margin="33,142,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnRegistration" Content="Регистрация" HorizontalAlignment="Left" Margin="10,218,0,0" VerticalAlignment="Top" Width="78" Click="btnRegistration_Click"/>
        <Button x:Name="btnCancel" Content="Отмена" HorizontalAlignment="Left" Margin="107,218,0,0" VerticalAlignment="Top" Width="78" Click="btnCancel_Click"/>

    </Grid>
</Page>
